<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <description>Avocado Share web application</description>
    <error-page>
        <location>/error.jsp</location>
    </error-page>
    <filter>
        <filter-name>HiddenFilesFilter</filter-name>
        <filter-class>ch.avocado.share.common.HiddenFilesFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>HiddenFilesFilter</filter-name>
        <url-pattern>/group/templates/*</url-pattern>
    </filter-mapping>

    <filter-mapping>
        <filter-name>HiddenFilesFilter</filter-name>
        <url-pattern>/includes/*</url-pattern>
    </filter-mapping>

    <filter-mapping>
        <filter-name>HiddenFilesFilter</filter-name>
        <url-pattern>/group/member_templates/*</url-pattern>
    </filter-mapping>

    <session-config>
        <session-timeout>10</session-timeout>
        <cookie-config>
            <http-only>true</http-only>
            <name>SESSION</name>
        </cookie-config>
        <tracking-mode>COOKIE</tracking-mode>
    </session-config>
    <welcome-file-list>
        <welcome-file>/index.jsp</welcome-file>
    </welcome-file-list>

</web-app>